<h1><%= @list.name %></h1>

<p>Signets dans cette liste :</p>

<div class="movie-cards-container">
  <% @bookmarks.each do |bookmark| %>
    <div class="movie-card">
      <img src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %> poster" class="movie-poster">
      <div class="movie-details">
        <div class="movie-title">
          <span><%= bookmark.movie.title %></span>
          <span class="movie-rating"><%= bookmark.movie.rating %>/10</span>
        </div>
        <p class="movie-overview"><%= bookmark.movie.overview %></p>
        <p class="movie-comment"><%= bookmark.comment %></p>
        <%= link_to "Supprimer", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Es-tu sÃ»r de vouloir supprimer ?" }, class: "btn btn-danger btn-sm" %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "Ajouter un signet", new_list_bookmark_path(@list), class: "btn btn-primary" %>
<%= link_to "Retour", lists_path, class: "btn btn-secondary" %>
