<div class="container mt-5">
  <h1 class="text-center mb-4"><%= @list.name %></h1>

  <div class="text-center mb-4">
    <%= link_to "Ajouter un signet", new_list_bookmark_path(@list), class: "btn btn-primary me-2" %>
    <%= link_to "Retour", lists_path, class: "btn btn-secondary" %>
  </div>

  <h3 class="mb-4">ğŸ“š Signets dans cette liste :</h3>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @bookmarks.each do |bookmark| %>
      <div class="col">
        <div class="card shadow-sm h-100">
          <img src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %> poster" class="card-img-top">
          <div class="card-body">
            <h5 class="card-title d-flex justify-content-between">
              <span><%= bookmark.movie.title %></span>
              <span class="badge bg-danger"><%= bookmark.movie.rating %>/10</span>
            </h5>
            <p class="card-text text-truncate"><%= bookmark.movie.overview %></p>
            <p class="text-muted small"><%= bookmark.comment %></p>
            <div class="d-grid">
              <%= link_to "Supprimer", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Es-tu sÃ»r de vouloir supprimer ?" }, class: "btn btn-danger btn-sm" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
