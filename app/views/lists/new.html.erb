<div class="container mt-5">
  <h1 class="text-center mb-4">Créer une nouvelle liste</h1>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-body">
          <%= simple_form_for @list do |f| %>
            <div class="mb-3">
              <%= f.input :name, label: "Nom de la liste", input_html: { class: "form-control" } %>
            </div>
            <div class="d-grid">
              <%= f.button :submit, "Créer une liste", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
